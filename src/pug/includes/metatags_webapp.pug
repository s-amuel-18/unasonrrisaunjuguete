mixin metatagsWebApp()
  -var mobileColor = '#E44D26'
  -var favicon = './img/favicon.ico'
  -var logoPNG = './img/web-components-logo.png'
  -var logoSVG = './img/web-components-logo.svg'
  meta(name="HandheldFriendly", content="true")
  meta(name="MobileOptimized", content="320")
  meta(name="theme-color", content=mobileColor)
  meta(name="msapplication-TileColor", content=mobileColor)
  meta(name="msapplication-TileImage", content=logoSVG)
  meta(name="apple-mobile-web-app-capable", content="yes")
  meta(name="apple-mobile-web-app-status-bar-style", content="default")
  link(rel="apple-touch-startup-image", href=logoSVG)
  link(rel="icon", type="image/x-icon", href=favicon)
  link(rel="icon", type="image/png", href=logoPNG)
  link(rel="apple-touch-icon", href=logoSVG)
  link(rel="author", type="text/plain", href="./humans.txt")
  link(rel="sitemap", type="application/xml", title="Sitemap", href="./sitemap.xml")
