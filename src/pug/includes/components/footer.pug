//- mixin footer(imgLogo, menu, socialmedia)
mixin footer(imgLogo, menu, socialMedia)
  footer.footer.py-5.b-red
    .container.py-3
      .row
        .footer-content.col-lg-3.col-md-6.col-sm-12.b-red.p-3
          img(src=imgLogo, alt="").w-100
        .footer-content.col-lg-3.col-md-6.col-sm-12.b-red.p-3
          h4 Direccion
          p.pl-2 Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quae officiis doloribus minus nam corporis numquam?
        .footer-content.col-lg-3.col-md-6.col-sm-12.b-red.p-3
          h4 Menu
          nav
            ul.pl-2
              each item in menu
                li
                  a(href=item[0])=item[1]
            
              
        .footer-content.col-lg-3.col-md-6.col-sm-12.b-red.p-3
          h4 Social Media
            ul.row.b-red.footer-listMedia.ml-2.mt-2
              each media in socialMedia
                li.footer-itemMedia.col-6
                  a(href=media[0]).footer-buttonMedia.b-red
                    img(src=media[1], alt="").b-red